<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/global.css" rel="stylesheet">
    <link href="/css/produtos.css" rel="stylesheet">
    <title>Admin - Agencia DevHouse</title>
</head>
<body>
    <%- include('../components/header') %>

    <main>
        <div>
            <a href="/admin/cadastro-produto">
                <button>Cadastrar Novo Produto</button>
            </a>
        </div>
        <section class="table">
            <table>
                <thead>
                    <tr>
                        <th>id</th>
                        <th>nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% produtos.forEach(produto => { %> 
                    <tr>
                        <td><%= produto.id %></td>
                        <td><%= produto.nome %></td>
                        <td>
                            <form 
                                method="POST"
                                action="/deletar-produto/<%= produto.id %>?_method=DELETE"
                            >                        
                                <button type="submit">Excluir</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %> 
                </tbody>                
            </table>            
        </section>
    </main>

    <%- include('../components/footer') %>
</body>
</html>